<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_margin="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leftarrow"
                android:padding="15dp"
                android:layout_marginStart="-20dp"
                android:layout_centerVertical="true"/>
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/button_customize"
                android:text="@string/Main"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="50dp"/>
        </RelativeLayout>

<!--        Main Menu-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Perfect"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>

<!--        First Verse-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:letterSpacing=".1"
                    android:lineHeight="18dp"
                    android:text="[Verse 1]\nI found a love for me\nOh darling, just dive right in and follow my lead\nWell I found a girl, beautiful and sweet\n
Oh, I never knew you were the someone waiting for me\n'Cause we were just kids when we fell in love\nNot knowing what it was\nI will not give you up this time\nBut darling, just kee me slow,
your heart is all I own\nAnd in your eyes, you're holding mine"
                    android:textSize="10sp" />

            </RelativeLayout>
        </RelativeLayout>

<!--        Chorus-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:letterSpacing=".1"
                    android:lineHeight="18dp"
                    android:text="[Chorus]\nBaby, I'm dancing in the dark with you between my arms\nBarefoot on the grass, Listening to our favorite song\n
When you said you looked a mess, I whispered\nunderneath my breath\nBut you heard it, darling, you look perfect tonight"
                    android:textSize="10sp" />

            </RelativeLayout>
        </RelativeLayout>

<!--        Second Verse-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:letterSpacing=".1"
                    android:lineHeight="18dp"
                    android:text="[Verse 2]\nWell I found a woman, stronger than anyone I know\nShe shares my dreams, I hope that someday, I'll share\nher home, I found a love, to carry more than just my\nsecrets
To carry love, to carry children of our own\nWe are still kids, but we're so in love\nFighting against all odds, I know we'll be alright this time\nDarling,
just hold my hand, Be my girl, I'll be  your man\nI see my future in your eyes"
                    android:textSize="10sp" />

            </RelativeLayout>
        </RelativeLayout>

        <!--      2nd Chorus-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:letterSpacing=".1"
                    android:lineHeight="18dp"
                    android:text="[Chorus]\nBaby, I'm dancing in the dark with you between my arms\nBarefoot on the grass, Listening to our favorite song\n
When you said you looked a mess, I whispered\nunderneath my breath\nBut you heard it, darling, you look perfect tonight"
                    android:textSize="10sp" />

            </RelativeLayout>
        </RelativeLayout>

        <!--       3rd Chorus-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:letterSpacing=".1"
                    android:lineHeight="18dp"
                    android:text="[Chorus]\nBaby, I'm dancing in the dark with you between my arms\nBarefoot on the grass, Listening to our favorite song\nI have faith in what I see
                    \nNow I know I have met an angel in person and she looks\nperfect I don't deserve this, You look perfect tonight
      "
                    android:textSize="10sp" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>